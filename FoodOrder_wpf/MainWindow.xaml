<Window x:Class="FoodOrder_wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FoodOrder_wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Frame Grid.Row="1"></Frame>
        <Rectangle Fill="Thistle"/>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Height="30" Width="60" Margin="5" Background="{x:Null}" > Page 1</Button>
            <Button Height="30" Width ="60" Margin="5" Background="{x:Null}"> Page 2</Button>
            <Button Height="30" Width ="60" Margin="5" Background="{x:Null}"> Page 3</Button>
        </StackPanel>

    </Grid>
</Window>
